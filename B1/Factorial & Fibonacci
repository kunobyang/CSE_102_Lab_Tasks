#include<stdio.h>

int fibonacci(int n);

void call_factorial();

void call_fibonacci();

unsigned long long factorial(int n);

int main()
{
    call_fibonacci();
    call_factorial();

    return 0;
}

//int fibonacci(int n)
int fibonacci(int n)
{
    int i;

    int f1 = 1;
    int f2 = 1;
    int term = 1;

    for(i=3;i<=n;i++)
    {
        term = f1+f2;
        f1=f2;
        f2=term;


    }

    //printf("Fibonacci_%d = %d\n\n",n,term);

    return(term);

}

unsigned long long factorial(int n)
{
    int val = 1;

    int i;
    for(i=1;i<=n;i++)
    {
        val*=i;
    }

    return(val);

}

void call_factorial()
{

    int n;
    unsigned long long Answer;
    printf("Factorial\n\n");
    printf("Enter the value of n: ");
    scanf("%d",&n);
    Answer = factorial(n);
    printf("The factorial of %d is %llu.\n\n",n,Answer);
}

void call_fibonacci()
{
    int n,f;
    printf("Fibonacci\n\n");
    printf("Enter the value of n : ");

    scanf("%d",&n);

    f= fibonacci(n);

    if(n == 1) printf("The 1st term of fibonacci is %d\n\n",f);
    else if(n == 2) printf("The 2nd term of fibonacci is %d\n\n",f);
    else if(n == 3) printf("The 3rd term of fibonacci is %d\n\n",f);
    else printf("The %dth term of fibonacci is %d.\n\n",n,f);

}
